@using Security.Sample.MVC.Models
@model ForgotPasswordModels
@{
    ViewBag.Title = "Forgot Password";
}
@if (Model.HintAnswerValidation != null)
{
using (Html.BeginForm("ForgotPasswordHint", "Account"))
{
    <h2 class="heading-hr"><i class="icon-lock"></i>Please provide answer to your hint question</h2>
  
    @Html.ValidationSummary(true)
    <div class="form-group">
        <div class="row">
            <div class="col-md-10">
                <label>@Html.Raw(Model.HintAnswerValidation.HintQuestion)?</label>
                @Html.HiddenFor(m=>m.HintAnswerValidation.Id)
            </div>
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.HintAnswerValidation.HintAnswer, new { @class = "required form-control", placeholder = "answer" })
                @Html.ValidationMessageFor(m => m.HintAnswerValidation.HintAnswer, "", new { @class = "text-danger" })
            </div>

            <div class="col-md-10">
                <label>New Password:</label>
                @Html.PasswordFor(m => m.HintAnswerValidation.NewPassword, new { @class = "form-control"})

                @Html.ValidationMessageFor(m => m.HintAnswerValidation.NewPassword, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-10">
                <label>Confirm Password:</label>
                @Html.PasswordFor(m => m.HintAnswerValidation.ConfirmPassword, new { @class = "form-control" })

                @Html.ValidationMessageFor(m => m.HintAnswerValidation.ConfirmPassword, "", new { @class = "text-danger" })
            </div>
        </div>

     
    </div>

    <div class="text-right">

        <input type="submit" value="Update" class="btn btn-primary" id="SubmitMe">
    </div>
}
}